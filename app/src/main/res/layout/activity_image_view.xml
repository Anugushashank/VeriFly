<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aparna.buddy.app.ImageViewActivity"
    android:orientation="vertical"
    android:background="#fc252424">

    <include
        android:id="@+id/borrower_details_tool_bar"
        layout="@layout/image_view_toolbar" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pic_num"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:textSize="16sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:id="@+id/full_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/matches_prompt"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageCheck"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:theme="@style/RadioThemeUse"
        android:orientation="vertical">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="No"
            android:textSize="16sp"
            android:buttonTint="@color/white"
            android:tag="@+id/No"
            android:textColor="#FFFFFF" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Matches Front Side"
            android:textSize="16sp"
            android:buttonTint="@color/white"
            android:id="@+id/matchFront"
            android:textColor="#FFFFFF" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Matches Back Side"
            android:textSize="16sp"
            android:buttonTint="@color/white"
            android:id="@+id/matchBack"
            android:textColor="#FFFFFF" />
    </RadioGroup>

</LinearLayout>
